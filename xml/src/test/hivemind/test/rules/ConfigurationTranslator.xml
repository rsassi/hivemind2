<module id="hivemind.test.rules" version="1.0.0">
	<configuration-point id="EP" schema-id="Datum"/>
	<schema id="Datum">
		<element name="datum">
			<attribute name="key" required="true"/>
			<attribute name="value" required="true"/>
			<rules>
				<create-object class="hivemind.test.config.impl.Datum"/>
				<read-attribute property="key" attribute="key"/>
				<read-attribute property="value" attribute="value"/>
				<invoke-parent method="addElement"/>
			</rules>
		</element>
	</schema>
	<contribution configuration-id="EP">
		<datum key="key1" value="value1"/>
		<datum key="key2" value="value2"/>
	</contribution>
	<service-point id="ExtensionPointTranslator"
		interface="hivemind.test.rules.DatumHolder">
		<invoke-factory>
			<construct class="hivemind.test.rules.impl.DatumHolderImpl">
				<set-configuration property="elements" configuration-id="EP"/>
			</construct>
		</invoke-factory>
	</service-point>
	<service-point id="Failure" interface="hivemind.test.rules.DatumHolder">
		<invoke-factory>
			<construct class="hivemind.test.rules.impl.DatumHolderImpl">
				<set-configuration property="elements" configuration-id="missing"/>
			</construct>
		</invoke-factory>
	</service-point>

	<configuration-point id="MEP" schema-id="MappedDatum"/>
	<schema id="MappedDatum">
		<element name="datum" key-attribute="key">
			<attribute name="key" required="true"/>
			<attribute name="value" required="true"/>
			<conversion class="hivemind.test.config.impl.Datum"/>
		</element>
	</schema>
	<contribution configuration-id="MEP">
		<datum key="key1" value="value1"/>
		<datum key="key2" value="value2"/>
	</contribution>
	<service-point id="MappedExtensionPointTranslator"
		interface="hivemind.test.rules.MappedDatumHolder">
		<invoke-factory>
			<construct class="hivemind.test.rules.impl.MappedDatumHolderImpl">
				<set-configuration property="elements" configuration-id="MEP"/>
			</construct>
		</invoke-factory>
	</service-point>
</module>
