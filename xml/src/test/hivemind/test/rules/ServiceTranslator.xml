<module
	id="hivemind.test.services" 
	version="1.0.0">
	<service-point id="Simple" interface="hivemind.test.services.SimpleService">
	  <create-instance class="hivemind.test.services.impl.SimpleServiceImpl"/>
	</service-point>
	
	<service-point id="Constructed" interface="hivemind.test.services.Constructed">
		<invoke-factory>			
			<construct class="hivemind.test.services.impl.ConstructedImpl">
				<set-service property="threadLocal" service-id="hivemind.ThreadLocalStorage"/>
				<set-service property="simpleService" service-id="Simple"/>	
			</construct>
		</invoke-factory>
	</service-point>
</module>